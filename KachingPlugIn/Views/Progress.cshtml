@model KachingPlugIn.ViewModels.ProgressViewModel

<div>
    @if (Model.Total == 0) {
        <p>
            Building @Model.ModelName for Ka-ching
            @for (int i = 0; i <= @Model.Polls % 3; i++)
            {
                @:<text>.</text>
            }
        </p>
    }
    else
    {
        <p>Exported @Model.Exported of @Model.Total @Model.ModelName</p>
    }
</div>
<script>
    function shouldSchedulePoll() {
        return '@(Model.Busy)' === '@true' && '@(Model.Error)' === '@false'
    }
</script>